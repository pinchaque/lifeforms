<h1>Environment <%= env.id %></h1>
<dl>
    <dt>Time Step</dt>
    <dd><%= env.time_step %></dd>

    <dt>Lifeform Count</dt>
    <dd><%= lifeforms.count %></dd>

    <dt>Size</dt>
    <dd><%= sprintf("%s x %s", env.width, env.height) %></dd>
</dl>
<ul>
    <% lifeforms.each do |lf| %>
        <li>
            <b><%= lf.name %></b> <%= lf.to_s %>
        </li>
    <% end %>
</ul>